<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="Code Decode" Height="720" Width="1400" ResizeMode="NoResize">
    
    <Grid Margin="10">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="Auto" />

        </Grid.ColumnDefinitions>
        
        <Label>TP2 Adrien Girard Yann Courtemanche Jonathan Witt</Label>
        <TextBox Grid.Row="1" Grid.Column="0" Width="550" Height="500" Name="textbox1" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top" >  
            Rentrez votre texte  
        </TextBox> 
        <TextBox Grid.Row="1" Grid.Column="3" Width="550" Height="500" Name="textbox2" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top" >  
            Voici le resultat encoder 
        </TextBox> 
        <Button Grid.Row="3" Grid.Column="2" Width="40" Height="25" x:Name="btnAdd" Click="Execute" Margin="0,5,0,0" >GO</Button>
        <ComboBox Grid.Row="2" Grid.Column="1" Width="200" Height="25" Name="ComboBox">
            <ComboBoxItem IsSelected="True" >text -> vigenere</ComboBoxItem>
            <ComboBoxItem>vigenere -> text</ComboBoxItem>
            <ComboBoxItem>text -> binaire</ComboBoxItem>
            <ComboBoxItem>binaire -> text</ComboBoxItem>
            <ComboBoxItem>text -> cesar</ComboBoxItem>
            <ComboBoxItem>cesar -> text</ComboBoxItem>
            <ComboBoxItem>text -> hexa</ComboBoxItem>
            <ComboBoxItem>hexa -> text</ComboBoxItem>
        </ComboBox>
        <TextBox Grid.Row="3" Grid.Column="1" Width="200" Height="25" Name="textbox3" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top" >  
            entrez votre cles si nécéssaire
        </TextBox> 
        <Button Grid.Row="5" Grid.Column="0"  Click="import">Ouvrir un fichier</Button>
        <Button Grid.Row="5" Grid.Column="3" Click="export">Exporter vers un fichier</Button>

     

        
    </Grid>
</Window>
